<Window x:Class="DynamoFormsC3D.ComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamoFormsC3D"
             mc:Ignorable="d" 
             Height="180" Width="400" WindowStartupLocation="CenterScreen" SizeToContent="Height" Title="Form Combo Box">
    <StackPanel>
        <Label x:Name="lbl_1" Content="Select from List" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbBox" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Width="370"/>
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0" HorizontalAlignment="Right">
            <Button x:Name="Btn_Ok" Content="Ok" Width="75" Margin="10" Click="Btn_Ok_Click"/>
            <Button x:Name="Btn_Cancel" Content="Cancel" Width="75" Margin="10" Click="Btn_Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
